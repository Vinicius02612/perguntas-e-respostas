<!DOCTYPE html>
<html lang="pt-BR">
<%- include ('../partials/head.ejs'); %>
<body>
 
<%- include ('../partials/navbar.ejs'); %>
   
        <div class="container">
            

                <h1><%= perguntas.titulo %></h1>
                <h4><%= perguntas.descricao %></h4>
            
        </div>
        <div class="container">
            <h3>Responda:</h3>
            <form action="/salvarResposta" method="POST" >
                <textarea name="corpo" class="form-control" placeholder="Digite sua respota"></textarea><br>
                <input type="hidden" name="pergunta" value="<%= perguntas.id %>">
                <button class="btn btn-primary" type="submit">Responder</button>
            </form>

        </div>
        <hr>
        <div class="container">
         
            <% resposta.forEach(resposta => { %>
                
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %></p>
                    </div>
                    
                </div>
                

                
            <% }) %>
        </div>

</body>
<%- include ('../partials/footer.ejs'); %>

</html>